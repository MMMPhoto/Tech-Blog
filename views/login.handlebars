<div class="card m-1">
    <div class="card-body border border-dark p-0 m-3">
        <h3 class="card-header m-1">Log in:</h3>
        <form class="form m-1 login-form">
            <div class="form-group m-1">
                <label for="username-login">Username:</label>
                <input class="form-input" type="text" id="username-login" />
            </div>
            <div class="form-group m-1">
                <label for="password-login">Password:</label>
                <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group m-1">
                <button class="btn" type="submit">Login</button>
            </div>
            <div class="form-group m-1">
                <button class="btn"><a href="/signup">Sign up instead</a></button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>