<div class="card m-1 border border-0">
    <div class="card-body border border-dark rounded p-0 m-3">
        <h3 class="card-header m-0 p-2">New Post:</h3>
        <form class="form m-1 new-post-form">
            <div class="form-group d-flex flex-column m-1 p-1">
                <label for="post-title">Title:</label>
                <textarea class="form-input form-control col-6 border border-dark mt-1" rows="1" type="text" id="post-title"></textarea>
            </div>
            <div class="form-group d-flex flex-column m-1 p-1">
                <label for="post-contents">Contents:</label>
                <textarea class="form-input form-control col-12 border border-dark mt-1" rows="6" type="text" id="post-contents"></textarea>
            </div>
            <div class="form-group m-1 p-1">
                <button class="btn" type="submit">Post</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/new-post.js"></script>